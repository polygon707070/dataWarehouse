<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jetsetapp.paint.OtherGallery">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess3"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess3"
                        android:tag="princess3" />

                    <ImageView
                        android:id="@+id/princess4"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess4"
                        android:tag="princess4" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess5"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess5"
                        android:tag="princess5" />

                    <ImageView
                        android:id="@+id/princess6"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess6"
                        android:tag="princess6" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess7"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess7"
                        android:tag="princess7" />

                    <ImageView
                        android:id="@+id/princess8"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess8"
                        android:tag="princess8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess9"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess9"
                        android:tag="princess9" />

                    <ImageView
                        android:id="@+id/princess10"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess10"
                        android:tag="princess10" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess11"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess11"
                        android:tag="princess11" />

                    <ImageView
                        android:id="@+id/princess12"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess12"
                        android:tag="princess12" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess2"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess2"
                        android:tag="princess2" />

                    <ImageView
                        android:id="@+id/princess14"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/princess14"
                        android:tag="princess14" />

                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dogs"
            style="@style/bottomButton"
            android:layout_gravity="left"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_dog4" />

        <ImageButton
            android:id="@+id/cats"
            style="@style/bottomButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_cat1" />

        <ImageButton
            android:id="@+id/other"
            style="@style/bottomButton"
            android:layout_gravity="right"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_princess2" />

    </LinearLayout>


</RelativeLayout>
