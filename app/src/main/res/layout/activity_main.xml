            android:onClick=""
            android:scaleType="fitStart" />

        <ImageButton
            android:id="@+id/floodFill"
            style="@style/colorButton"
            android:layout_toLeftOf="@+id/drawSmallbutton"
            android:layout_toStartOf="@+id/drawSmallbutton"
