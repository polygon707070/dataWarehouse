<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jetsetapp.paint.DogGallery">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog1"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog1"
                        android:tag="dog1" />

                    <ImageView
                        android:id="@+id/dog3"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog3"
                        android:tag="dog3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog4"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog4"
                        android:tag="dog4" />

                    <ImageView
                        android:id="@+id/dog5"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog8"
                        android:tag="dog8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog6"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog6"
                        android:tag="dog6" />

                    <ImageView
                        android:id="@+id/dog7"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog7"
                        android:tag="dog7" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog8"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog8"
                        android:tag="dog8" />

                    <ImageView
                        android:id="@+id/dog9"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog9"
                        android:tag="dog9" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog10"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog10"
                        android:tag="dog10" />

                    <ImageView
                        android:id="@+id/dog11"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog11"
                        android:tag="dog11" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog12"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog12"
                        android:tag="dog12" />

                    <ImageView
                        android:id="@+id/dog13"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/dog13"
                        android:tag="dog13" />
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dogs"
            style="@style/bottomButton"
            android:layout_gravity="left"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_dog4" />

        <ImageButton
            android:id="@+id/cats"
            style="@style/bottomButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_cat1" />

        <ImageButton
            android:id="@+id/other"
            style="@style/bottomButton"
            android:layout_gravity="right"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_princess2" />

    </LinearLayout>


</RelativeLayout>
