<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jetsetapp.paint.CatGallery">


    <ScrollView
        android:id="@+id/pic_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/GalleryTextStyle"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:shadowColor="@color/colorRed"
                        android:shadowDx="6"
                        android:shadowDy="-6"
                        android:shadowRadius="3"
                        android:text="@string/gallery_title" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat11"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat11"
                        android:tag="cat11" />

                    <ImageView
                        android:id="@+id/cat12"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat12"
                        android:tag="cat12" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat1"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:cropToPadding="false"
                        android:onClick="setBackground"
                        android:src="@drawable/cat1"
                        android:tag="cat1" />

                    <ImageView
                        android:id="@+id/cat2"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat2"
                        android:tag="cat2" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat5"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat5"
                        android:tag="cat5" />

                    <ImageView
                        android:id="@+id/cat6"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat6"
                        android:tag="cat6" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat7"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat7"
                        android:tag="cat7" />

                    <ImageView
                        android:id="@+id/cat8"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat8"
                        android:tag="cat8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat9"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat9"
                        android:tag="cat9" />

                    <ImageView
                        android:id="@+id/cat10"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat10"
                        android:tag="cat10" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat3"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat3"
                        android:tag="cat3" />

                    <ImageView
                        android:id="@+id/cat4"
                        style="@style/galleryIcon"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:onClick="setBackground"
                        android:src="@drawable/cat4"
                        android:tag="cat4" />


                </TableRow>

            </TableLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dogs"
            style="@style/bottomButton"
            android:layout_gravity="left"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_dog4" />

        <ImageButton
            android:id="@+id/cats"
            style="@style/bottomButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_cat1" />

        <ImageButton
            android:id="@+id/other"
            style="@style/bottomButton"
            android:layout_gravity="right"
            android:layout_weight="0.33"
            app:srcCompat="@drawable/bottom_menu_princess2" />

    </LinearLayout>


</RelativeLayout>
